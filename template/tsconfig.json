{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "isolatedModules": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "es2016"
    ],
    "sourceMap": true,
    "pretty": true,
    "types": [
      "webpack-env"
    ],
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "views/*": ["./src/views/*"]
    }
  }
}